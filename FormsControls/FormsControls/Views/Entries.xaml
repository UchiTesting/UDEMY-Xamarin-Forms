<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsControls.Views.Entries">
    <StackLayout>
        <Entry Keyboard="Telephone" Placeholder="Phone" PlaceholderColor="CornflowerBlue"  Completed="Entry_Completed"/>
        <Entry Keyboard="Default" Placeholder="Password" PlaceholderColor="PaleVioletRed" IsPassword="True" />
        <Entry Keyboard="Email" Placeholder="Email" Visual="Material" TextChanged="Entry_TextChanged"/>
        <Label x:Name="LabelPhone" />
        <Label x:Name="LabelMail" />
        <Editor BackgroundColor="Yellow" VerticalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>