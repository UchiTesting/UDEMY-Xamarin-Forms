<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeyondBasics.Views.MessagingCenterDetail">
    <StackLayout>
        <Label Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='{0:F0}'}" />
        <Slider x:Name="slider" Maximum="100" Minimum="0" Value="50" ValueChanged="slider_ValueChanged"/>
        <Button Text="Back" Clicked="BackToDemo_Clicked" />
    </StackLayout>
</ContentPage>