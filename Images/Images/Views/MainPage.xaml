            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:views="clr-namespace:Images.Views"
            mc:Ignorable="d"
            x:Class="Images.Views.MainPage">
    <NavigationPage Title="Page 0" >
        <x:Arguments>
            <views:Page0 />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Page 1">
        <x:Arguments>
            <views:ActivityIndicatorView />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Page 2">
        <x:Arguments>
            <views:Page2 />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>
